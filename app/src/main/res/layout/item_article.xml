<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/PadFad">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_article_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A#: "
            android:textAppearance="@style/MajorNumber" />

        <TextView
            android:id="@+id/item_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAppearance="@style/MajorHeader" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_article_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content"
        android:textAppearance="@style/PlainText" />

</LinearLayout>