<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MajorHeader" parent="TextAppearance.AppCompat">
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MinorHeader" parent="TextAppearance.AppCompat">
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MajorNumber" parent="TextAppearance.AppCompat">
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/numberColor</item>
    </style>

    <style name="MinorNumber" parent="TextAppearance.AppCompat">
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/numberColor</item>
    </style>

    <style name="PlainText" parent="TextAppearance.AppCompat">
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PadFad">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:paddingLeft">9dp</item>
    </style>
</resources>
